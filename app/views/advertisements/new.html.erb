<h1>New Advertisement</h1>

<div class="row">
  <div = class="col-md-4">
    <p>There are no guidelines for advertisement</p>
    <p>add price attribute to the form</p>
  </div>
  <div = class="col-md-8">
    <%= form_for @advertisement do |f| %>
      <div class= "form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter post title" %>
      </div>

      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, row: 8, class: 'form-control', placeholder: "Enter post body" %>
      </div>

      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
